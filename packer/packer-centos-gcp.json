{
  "variables": {
    "machine_type": "{{env `GOOGLE_MACHINE_TYPE`}}",
    "region": "{{env `GOOGLE_REGION`}}",
    "zone": "{{env `GOOGLE_ZONE`}}",
    "project_id": "{{env `GOOGLE_PROJECT_ID`}}",
    "network_name": "{{env `GOOGLE_NETWORK_NAME`}}",
    "image_name": "{{env `GOOGLE_IMAGE_NAME`}}",
    "account_file": "{{env `GOOGLE_ACCOUNT_FILE`}}",
    "network_project_id": "default",
    "subnetwork_name": "{{env `GOOGLE_SUBNETWORK_NAME`}}",
    "firewall_name": "{{env `GOOGLE_FIREWALL_NAME`}}"
  },
  "builders": [{
    "project_id": "{{user `project_id`}}",
    "account_file": "{{user `account_file`}}",
    "type": "googlecompute",
    "region": "{{user `region`}}",
    "zone": "{{user `zone`}}",
    "network": "{{user `network_name`}}",
    "subnetwork": "{{user `subnetwork_name`}}",
    "machine_type": "{{user `machine_type`}}",
    "source_image_family": "centos-7",
    "instance_name": "hcpoc-packer-gcp-{{timestamp}}",
    "image_description": "CentOS Machine Image",
    "image_family": "{{user `image_name`}}",
    "image_name": "{{user `image_name`}}-{{timestamp}}",
    "disk_size": 20,
    "disk_type": "pd-ssd",
    "ssh_username": "centos",
    "tags": ["ssh-allowed-node", "packer-builder"]
  }],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "../ansible/centos-gcp.yml",
      "groups": ["centos-gcp"]
    },
    {
      "type": "shell",
      "script": "scripts/centos-cleanup.sh"
    },
    {
      "inline": "sudo reboot",
      "type": "shell",
      "expect_disconnect": true
    }
  ]
}
