datacenter = "{{ consul_dc_name }}"
data_dir = "/var/lib/consul"
log_level = "DEBUG"
node_name = "{{ inventory_hostname }}"
bootstrap_expect = 3
retry_join = [
{% for host in groups['consul-server'] %}
  {% if hostvars[host]['inventory_hostname'] != inventory_hostname %}
   "{{ hostvars[host]['ansible_default_ipv4']['address'] }}:8301",
  {% endif %}
{% endfor %}
]

ports {
  grpc  = 8502
  https = 8501
  http  = 8500
}
server = true
telemetry = {
   prometheus_retention_time = "30s"
   disable_hostname = true
}
acl {
   enabled = true
   default_policy = "deny"
   enable_token_persistence = true
   {{ with secret "consul/creds/consul-agent-role" }}tokens = { default = "{{ .Data.token }}" }{{ end }}
 }
ui = true
ui_config {
  enabled = true
  metrics_provider = "prometheus"
  metrics_proxy {
    base_url = "http://prometheus.service.consul:9090"
  }
}
client_addr = "0.0.0.0"
connect {
   enabled = true
   ca_provider = "vault"
   ca_config {
        address = "http://localhost:8200"
        token = "{{ file "/etc/consul.d/vault_token" }}"
        root_pki_path = "tls_pki"
        intermediate_pki_path = "connect_pki_int"
   }
}
cert_file = "/etc/consul.d/cert"
key_file = "/etc/consul.d/keyfile"
ca_file = "/etc/consul.d/ca"
verify_outgoing = true
verify_incoming = true
verify_server_hostname = true
